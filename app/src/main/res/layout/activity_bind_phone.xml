<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_247"
    android:orientation="vertical">

    <include layout="@layout/top_title" />

    <LinearLayout
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="14dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="手机号："
                android:textColor="@color/txt_798089"
                android:textSize="15sp" />

            <EditText
                android:textColorHint="@color/txt_163164192"
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_bg"
                android:hint="请输入手机号"
                android:inputType="number"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
           >

            <TextView

                android:layout_marginLeft="14dp"
                android:id="@+id/tv_yan"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="验证码："
                android:textColor="@color/txt_798089"
                android:textSize="15sp"  />

            <EditText
                android:layout_centerVertical="true"
                android:textColorHint="@color/txt_163164192"
                android:id="@+id/et_verification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:layout_toRightOf="@id/tv_yan"
                android:background="@drawable/et_bg"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="4"
                android:padding="8dp"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />

            <TextView

                android:gravity="center"
                android:id="@+id/tv_get_ver"
                android:layout_width="73dp"
                android:layout_height="29dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
android:layout_marginRight="10dp"
                android:text="点击获取"
                android:textColor="@color/txt_75141250"
                android:textSize="13sp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="14dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="登录密码："
                android:textColor="@color/txt_798089"
                android:textSize="15sp"  />

            <EditText
                android:textColorHint="@color/txt_163164192"
                android:id="@+id/et_login_pswd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_bg"
                android:hint="请输入登录密码"
                android:inputType="number"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="14dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="确认密码："
                android:textColor="@color/txt_798089"
                android:textSize="15sp"  />

            <EditText
                android:textColorHint="@color/txt_163164192"
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_bg"
                android:hint="请再次确认登陆密码"
                android:inputType="number"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>


    </LinearLayout>


    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_submit"
        android:layout_width="351dp"
        android:layout_height="46dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_click"
        android:gravity="center"
        android:padding="9dp"
        android:text="绑定"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />

</LinearLayout>