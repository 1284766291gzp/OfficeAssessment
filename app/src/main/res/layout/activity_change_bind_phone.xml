<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_247"
    android:orientation="vertical">

    <include layout="@layout/top_title" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <EditText
                android:textColorHint="@color/txt_163164192"
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:hint="请输入手机号"
                android:inputType="number"
                android:paddingLeft="12dp"
                android:singleLine="true"
                android:textSize="15sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
           >


            <EditText
                android:paddingLeft="12dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColorHint="@color/txt_163164192"
                android:id="@+id/et_verification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="4"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textSize="15sp" />

            <TextView
                android:background="@drawable/get_verification_code_bg"
                android:gravity="center"
                android:id="@+id/tv_get_ver"
                android:layout_width="73dp"
                android:layout_height="29dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="点击获取"
                android:textColor="@color/txt_75141250"
                android:textSize="13sp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>




    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_submit"
        android:layout_width="330dp"
        android:layout_height="46dp"
        android:layout_marginTop="95dp"
        android:background="@drawable/button_click"
        android:gravity="center"
        android:text="确定"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:textSize="11sp"
            android:textColor="@color/txt_75141250"
            android:text="换绑之后，可以用你新手机号和原密码进行登陆"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</LinearLayout>
</LinearLayout>