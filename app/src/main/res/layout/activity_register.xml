<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_247"
    android:orientation="vertical">

    <include layout="@layout/top_title" />

    <LinearLayout
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="14dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="真实姓名："
                android:textColor="@color/txt_798089"
                android:textSize="15sp" />

            <EditText
                android:textColorHint="@color/txt_163164192"
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:hint="请输入真实姓名"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="14sp" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="14dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="职位："
                android:textColor="@color/txt_798089"
                android:textSize="15sp" />

            <TextView
                android:text="员工"
                android:textColor="@color/txt_798089"
                android:drawableRight="@drawable/xiala"
                android:id="@+id/txt_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/report_work_bg"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="14dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="手机号："
                android:textColor="@color/txt_798089"
                android:textSize="15sp" />

            <EditText
                android:textColorHint="@color/txt_163164192"
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:hint="请输入手机号"
                android:inputType="number"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
           >

            <TextView

                android:layout_marginLeft="14dp"
                android:id="@+id/tv_yan"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="验证码："
                android:textColor="@color/txt_798089"
                android:textSize="15sp"  />

            <EditText
                android:layout_centerVertical="true"
                android:textColorHint="@color/txt_163164192"
                android:id="@+id/et_verification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="100dp"
                android:layout_toRightOf="@id/tv_yan"
                android:background="@color/colorWhite"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="4"
                android:padding="8dp"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />

            <TextView

                android:gravity="center"
                android:id="@+id/tv_get_ver"
                android:layout_width="73dp"
                android:layout_height="29dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/get_verification_code_bg"
                android:layout_marginRight="10dp"
                android:text="点击获取"
                android:textColor="@color/txt_75141250"
                android:textSize="13sp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="14dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="密码：  "
                android:textColor="@color/txt_798089"
                android:textSize="15sp"  />

            <EditText
                android:textColorHint="@color/txt_163164192"
                android:id="@+id/et_login_pswd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="14dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="确认密码："
                android:textColor="@color/txt_798089"
                android:textSize="15sp"  />

            <EditText
                android:textColorHint="@color/txt_163164192"
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:hint="请再次确认密码"
                android:inputType="textPassword"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:paddingLeft="14dp"
            android:paddingBottom="40dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <CheckBox
                android:textColor="@color/txt_77"
                android:textSize="13sp"
                android:text="  同意"
                style="@style/RememberPswdCheckboxTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox">
            </CheckBox>


            <TextView
                android:textSize="13sp"
                android:paddingLeft="10dp"
                android:textColor="@color/txt_75141250"
                android:layout_gravity="center_vertical"
                android:text="&#060;&#060;*******用户协议&#062;&#062;"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>




    </LinearLayout>


    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_submit"
        android:layout_width="340dp"
        android:layout_height="46dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_click"
        android:gravity="center"
        android:padding="9dp"
        android:text="确定"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />


    <TextView
        android:id="@+id/txt_back_tologin"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:textSize="13sp"
        android:paddingLeft="10dp"
        android:textColor="@color/txt_75141250"
        android:layout_gravity="right"
        android:text="已注册直接登录&#062;&#062;"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>