<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_247"
    android:orientation="vertical">

    <include layout="@layout/top_title" />

    <LinearLayout
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="221dp"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            >
            <TextView
                android:gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:id="@+id/tv_yan"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:text="关于我们"
                android:textColor="@color/txt_26"
                android:textSize="16sp"  />




            <ImageView
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jinru"/>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>


        <RelativeLayout
            android:id="@+id/rl_feedback"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="意见反馈"
                android:textColor="@color/txt_26"
                android:textSize="16sp" />

            <ImageView
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jinru"/>

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="版本更新"
                android:textColor="@color/txt_26"
                android:textSize="16sp" />

            <ImageView
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jinru"/>
        </RelativeLayout>



        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>


        <RelativeLayout
            android:id="@+id/rl_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="清除缓存"
                android:textColor="@color/txt_26"
                android:textSize="16sp"  />


            <TextView
                android:id="@+id/txt_cache"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/image"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="0KB"
                android:textColor="@color/txt_26"
                android:textSize="14sp"  />

            <ImageView
                android:id="@+id/image"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              android:src="@drawable/jinru" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>


    </LinearLayout>


    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_submit_exit_login"
        android:layout_width="340dp"
        android:layout_height="46dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/report_work_bg"
        android:gravity="center"
        android:padding="9dp"
        android:text="退出登录"
        android:textColor="@color/txt_77"
        android:textSize="16sp" />

</LinearLayout>