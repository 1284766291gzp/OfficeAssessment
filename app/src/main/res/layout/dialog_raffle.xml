<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/tanchu"
    android:layout_height="260dp">




    <ImageView
        android:layout_margin="8dp"
        android:layout_gravity="right"
        android:id="@+id/img_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/shanchu" />



    <ImageView
        android:scaleType="fitXY"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/img_raffle"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/image2" />

    <LinearLayout
        android:layout_marginBottom="20dp"
       android:layout_gravity="bottom|center_horizontal"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_msg"
            android:text="恭喜您！中得美的电饭煲1.5ML"
            android:textColor="@color/txt_51"
            android:textSize="14sp" />

        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="可在我的抽奖中查看"
            android:textColor="@color/txt_153153153"
            android:textSize="13sp" />

    </LinearLayout>
</FrameLayout>