<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="123dp"
    android:layout_marginBottom="5dp"
    android:background="@color/colorWhite"
    android:orientation="vertical">





        <LinearLayout
            android:paddingRight="15dp"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <TextView

            android:layout_marginTop="15dp"
            android:id="@+id/txt_work_content_1"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="工作标题工作标题"
            android:textSize="15sp"
            android:textColor="@color/txt_51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/txt_work_content_2"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="工作内容工作内容工作内容工作内容工作内容"
                android:textSize="12sp"
                android:textColor="@color/txt_77"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />




        </LinearLayout>
        

        <View
            android:layout_marginTop="15dp"
            android:background="@color/line230"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="44dp">


        <TextView
android:layout_marginLeft="15dp"
            android:gravity="left|center_vertical"
            android:layout_centerVertical="true"
            android:id="@+id/txt_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="提交日期：2017/11/1 18:30:01"
            android:textColor="@color/txt_153153153"
            android:textSize="12sp" />

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">


            <TextView

                android:gravity="left|center_vertical"
                android:layout_centerVertical="true"
                android:id="@+id/txt_regular_job_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="已超期"
                android:layout_centerInParent="true"
                android:textColor="@color/txt_75141250"
                android:textSize="12sp" />
                <TextView
                    android:textColor="@color/txt_2551460"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:text="3分"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />


            </RelativeLayout>

        </LinearLayout>


</LinearLayout>
